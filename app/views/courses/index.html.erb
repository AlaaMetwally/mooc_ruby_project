
<h1>Courses</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Created By</th>
      <th colspan="3" style="text-align:center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each_with_index do |course,i| %>
      <tr>
        <td><%= course.title %></td>
        <td>
        <% if course.user %>
        <%= course.user.name %>
        <% end %>
        </td>
        <td style="width:100px;text-align:center"><%= link_to ' Show', course,:style=> 'color:#FFFFFF;',:class=>"btn btn-success btn-sm glyphicon glyphicon-th-list" %></td>
        <% if course.user == current_user %>
          <td style="width:100px;text-align:center"><%= link_to ' Edit', edit_course_path(course) ,:style=> 'color:#FFFFFF;',:class=>"btn btn-warning btn-sm glyphicon glyphicon-edit" %></td>
          <td style="width:100px;text-align:center"><%= link_to ' Destroy', course,:style=> 'color:#FFFFFF;',:class=>"btn btn-danger btn-sm glyphicon glyphicon-trash", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <td></td>
        <td></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @courses %>
<br>
<% if current_user %>
<% if current_user.user_type == 'admin' or current_user.user_type == 'instructor'  %>
<%= link_to ' NewCourse', new_course_path ,:style=> 'color:#FFFFFF;',:class=>"btn btn-info btn-sm glyphicon glyphicon-user" %>
<% end %>
<% end %>